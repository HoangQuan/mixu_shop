<%= form_for @user do |f| %>
  <%= render "errors", object: f.object %>
  <table class="table table-striped table-bordered">
    <tr>
      <td>Name: </td>
      <td><%= f.text_field :name%></td>
    </tr>
    <tr>
      <td>Admin: </td>
      <td><%= f.check_box :admin%></td>
    </tr>
    <tr>
      <td>uid: </td>
      <td><%= f.text_field :uid%></td>
    </tr>
    <tr>
      <td colspan="2" align="center"><%= f.submit "submit" %></td>
    </tr>
  </table>
<% end %>
