<%= form_for @product do |f| %>
  <%= render "errors", object: f.object %>
  <table class="table table-striped table-bordered">
    <tr>
      <td>Name: </td>
      <td><%= f.text_field :name%></td>
    </tr>
    <tr>
      <td>Size: </td>
      <td><%= f.text_field :size%></td>
    </tr>
    <tr>
    <tr>
      <td>Price: </td>
      <td><%= f.text_field :price%></td>
    </tr>
    <tr>
      <td>Image1: </td>
      <td>
        <%= f.file_field :product_image1 %>
        <%= image_tag @product.product_image1 if @product.product_image1 %>
      </td>
    </tr>
    <tr>
      <td>Image2: </td>
      <td>
        <%= f.file_field :product_image2 %>
        <%= image_tag @product.product_image2 if @product.product_image2 %>
      </td>
    </tr>
    <tr>
      <td>Image3: </td>
      <td>
        <%= f.file_field :product_image3 %>
        <%= image_tag @product.product_image3 if @product.product_image3 %>
      </td>
    </tr>
    <tr>
      <td>Type: </td>
      <td><%= f.collection_select :product_type_id, Admin::ProductType.all, :id, :name, {include_blank: "Chọn loại sản phẩm"} %></td>
    </tr>
    <tr>
      <td colspan="2" align="center"><%= f.submit "submit" %></td>
    </tr>
  </table>
<% end %>
