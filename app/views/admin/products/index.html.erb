<section id="products-index">
<% if notice %>
  <%= notice %>
<% end %>
<%= link_to "Add new product", new_admin_product_path %>
  <table class="table table-striped table-bordered">
    <tr>
      <th>No.</th>
      <th>Name</th>
      <th>Size</th>
      <th>Price</th>
      <th>Amount</th>
      <th>Type</th>
      <th>Image1</th>
      <th>Image2</th>
      <th>Image3</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Status</th>
      <th colspan="3">Action</th>
    </tr>
    <% @products.each_with_index do |product, i|%>
      <tr>
        <% j = params[:page] ? 5*((params[:page].to_i)-1) : 0 %>
        <td><%= i+j+1 %></td>
        <td><%= product.name %></td>
        <td><%= product.size %></td>
        <td><%= product.price %></td>
        <td><%= product.amount %></td>
        <td><%= product.product_type.try(:name) %></td>
        <td><%= image_tag(product.image_fb_url1, width: "80", height: "120", alt: "anh 1") %></td>
        <td><%= image_tag(product.image_fb_url2, width: "80", height: "120", alt: "anh 2") %></td>
        <td><%= image_tag(product.image_fb_url3, width: "80", height: "120", alt: "anh 3") %></td>
        <td><%= product.created_at %></td>
        <td><%= product.updated_at %></td>
        <td><%= product.status==1 ? "Còn Hàng" : "Hết Hàng" %></td>
        <td><%= link_to "Show", admin_product_path(product) %></td>
        <td><%= link_to "Edit", edit_admin_product_path(product) %></td>
        <td><%= link_to "Destroy", admin_product_path(product), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </table>
  <%= paginate @products %>
</section>
